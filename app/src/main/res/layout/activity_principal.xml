<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8sp"
    tools:context=".Principal"
    android:background="#060614">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:src="@drawable/ic_menu_gallery"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Engr. Md. Rakib Ullah \nPrincipal of Feni Computer Institute"
                android:textColor="#ffff"
                android:textSize="22sp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile: \nEmail:"
                android:textColor="#ffff"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/principalcalD"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@drawable/callnowbtn"></Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message from Principal"
                android:textColor="#8A0606"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="#ffff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/principal"
                android:textColor="#ffff"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>